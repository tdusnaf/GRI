<mvc:View controllerName="herramientaaprovisionamiento.docstatus.controller.Main"
    xmlns:f="sap.f"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:sfb="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    height="100%"
     >
    <f:DynamicPage id="dynamicPageId" headerExpanded="true" toggleHeaderOnTitleClick="true">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle id="Tit">
					<f:heading>
						<Title id="Tit2" text="{i18n>title}"/>
					</f:heading>
					<f:expandedContent>
						<Label id="Tit3" text="This is a subheading"/>
					</f:expandedContent>
					<f:snappedContent>
						<Label id="Tit4" text="This is a subheading"/>
					</f:snappedContent>
					<f:snappedTitleOnMobile>
						<Title id="Tit5" text="This is a subheading"/>
					</f:snappedTitleOnMobile>
					<f:content>
					</f:content>					
				</f:DynamicPageTitle>
			</f:title>
			<!-- DynamicPage Header -->
			<f:header>
             <!-- Smart filter bar -->
                    <f:DynamicPageHeader id="A" pinnable="true">

                <!-- Barra de busqueda -->                     

                <!-- Filtro por campo -->
                     <sfb:SmartFilterBar
                        id="smartFilterBar"
                        entitySet="Status"> 
                        <sfb:controlConfiguration>
                            <sfb:ControlConfiguration
								id="CC"
                                key="Name"
                                visibleInAdvancedArea="true" />
                        </sfb:controlConfiguration>
                    </sfb:SmartFilterBar>                     

				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<!-- Smart table -->
                	
                <smartTable:SmartTable 
                    id="LineItemsSmartTable" 
                    entitySet="Status" 
                    smartFilterId="smartFilterBar" 
                    tableType="Table" 
                    enableExport="true" 
                    beforeExport="onBeforeExport" 
                    useVariantManagement="true" 
                    useTablePersonalisation="true" 
                    header="Estados" 
                    showRowCount="true" 
                    persistencyKey="smartKey" 
                    enableAutoBinding="true" class="sapUiResponsiveContentPadding" 
                    enableAutoColumnWidth="true"
                    editTogglable="true" 
                    app:useSmartToggle="true"
					
					> 
                    
				<smartTable:layoutData>
					<FlexItemData id="FID" growFactor="1" baseSize="0%"/>
				</smartTable:layoutData>
			</smartTable:SmartTable>
                                   
			    
			</f:content>
		</f:DynamicPage>
</mvc:View>