<mvc:View controllerName="herramientaaprovisionamiento.docstatus.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    height="100%"
     >
    <f:DynamicPage id="dynamicPageId" headerExpanded="true" toggleHeaderOnTitleClick="true">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="{i18n>title}"/>
					</f:heading>
					<f:expandedContent>
						<Label text="This is a subheading"/>
					</f:expandedContent>
					<f:snappedContent>
						<Label text="This is a subheading"/>
					</f:snappedContent>
					<f:snappedTitleOnMobile>
						<Title text="This is a subheading"/>
					</f:snappedTitleOnMobile>
					<f:content>
					</f:content>					
				</f:DynamicPageTitle>
			</f:title>
			<!-- DynamicPage Header -->
			<f:header>
                    <f:DynamicPageHeader pinnable="true">
                            <sfb:SmartFilterBar
                            id="smartFilterBar"
                            entitySet=""
                            search="onSearch">
                            <sfb:customData>
                                <core:CustomData
                                    key="defaultFilterBarExpanded"
                                    value='{"VH_many_filters": "true"}'/>
                                <core:CustomData
                                    key="defaultShowAllFilters"
                                    value='{"VH_many_filters": "true"}'/>
                            </sfb:customData>
                            <sfb:controlConfiguration>
                                <sfb:ControlConfiguration
                                    key="Name"
                                    visibleInAdvancedArea="true" />
                                <sfb:ControlConfiguration
                                    key="Currency"
                                    visibleInAdvancedArea="true" />
                            </sfb:controlConfiguration>
                        </sfb:SmartFilterBar>
				    	<!-- Smart filter bar -->
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<!-- Smart table -->
               	<m:VBox>
                    <smartTable:SmartTable
                        id="smartTable"
                        entitySet=""
                        smartFilterId="smartFilterBar"
                        tableType="Table"
                        header="Products"
                        showRowCount="true"
                        enableAutoColumnWidth="true">
                        <smartTable:customData>
                            <core:CustomData key="defaultFilterBarExpanded" value='true'/>
                            <core:CustomData key="defaultShowAllFilters" value='true'/>
                        </smartTable:customData>
                        <smartTable:layoutData>
                            <m:FlexItemData growFactor="1" baseSize="0%"/>
                        </smartTable:layoutData>
                    </smartTable:SmartTable>
			    </m:VBox>
			</f:content>
		</f:DynamicPage>
</mvc:View>